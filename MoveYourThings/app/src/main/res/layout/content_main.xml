<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.moveyourthings.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_gravity="top"
        android:scaleType="center"
        android:cropToPadding="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/mover"
        android:text="Mover"
        android:background="#08AE9E"
        android:textColor="@android:color/white"
        android:textColorHighlight="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="115dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/moving"
        android:layout_alignStart="@+id/moving"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/moving"
        android:text="Move Your Things"
        android:background="#08AE9E"
        android:textColor="@android:color/white"
        android:textColorHighlight="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="102dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>
